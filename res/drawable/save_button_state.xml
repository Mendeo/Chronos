<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" 
    android:constantSize="true"
    android:dither="true" >
    <item
        android:drawable="@drawable/save_button_normal"
        android:state_pressed="false"
	 />	
    <item
        android:state_pressed="true">
		<layer-list>
			<item>
				<bitmap
					android:src="@drawable/save_button_normal"
					android:gravity="center"
				/>
			</item>			
			<item>
				<shape
				    android:shape="rectangle">			    
				    <corners
        				android:radius="6dp"
        			/>				    
				    <solid
				        android:color="@color/ButtonPressedLayerColor"
					/>
				</shape>
			</item>
		</layer-list>	    		    
	</item>
</selector>