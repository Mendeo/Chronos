<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >
	<TextView
		android:id="@+id/today_reminder_row_title"
		android:textSize="@dimen/TodayRemindersRowTitleTextSize"
		android:textStyle="bold"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/MainTextColor_mainWindow"
	/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="left"
		android:orientation="horizontal" >
		<TextView
			android:id="@+id/today_reminder_row_hour"
			android:textSize="@dimen/TodayRemindersRowTimeTextSize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/MainTextColor_mainWindow"
		/>
		<TextView
		    android:text="@string/time_divider"
			android:textSize="@dimen/TodayRemindersRowTimeTextSize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/MainTextColor_mainWindow"
		/>
		<TextView
			android:id="@+id/today_reminder_row_minute"
			android:textSize="@dimen/TodayRemindersRowTimeTextSize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/MainTextColor_mainWindow"
		/>
	</LinearLayout>
</LinearLayout>